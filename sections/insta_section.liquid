{% stylesheet %}
.maindiv {
    display: flex;
}
  .imginsta a {
    position: absolute;
    width: 100%;
    height: 100%;
    text-align: center;
    color: #fff;
    background-color: #122947cc;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity .4s Cubic-bezier(1,0,.43,1);
    display: flex;
    align-items: center;
    justify-content: center;
}
  .imginsta a:hover {
    opacity: 1;
}
.insta1 {
    width: 33.33%;
  display: flex;
    justify-content: center;
    flex-direction: column;
    align-self: center;
    text-align: center;
}
  .insta {
    width: 33.33%;
        display: flex;
}
.divinsta {
    display: flex;
    max-width: 100%;
    flex-wrap: wrap;
}
  .imginsta {
    max-width: 50%;
}
.instatext h5 {
    color: #ef525b;
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
    font-family: Brown;
    margin: 0 0 24px;
    letter-spacing: .12em;
}
  .instatext h2 {
    font-family: Feijoa-Medium,Georgia,Times New Roman,Times,serif;
    font-weight: 400;
    line-height: 1.3;
    color: #122947;
    margin: 0 0 24px;
    font-size: 39px;
}
  a.button-default {
    display: inline-block;
    height: 56px;
    min-width: 160px;
    border: 1px solid rgba(18,41,71,.12);
    border-radius: 2px;
    font-size: 12px;
    font-weight: 700;
    line-height: 14px;
    text-align: center;
    padding: 0 24px;
    color: #122947;
    line-height: 54px;
    text-transform: uppercase;
    letter-spacing: .12em;
    white-space: nowrap;
    transition: background-color .2s Cubic-bezier(1,0,.43,1),color .2s Cubic-bezier(1,0,.43,1),transform .2s Cubic-bezier(.3,0,.3,1);
}
  
 a.button-default:hover{
    background-color: #283953;
    color: #fff;
}









  
