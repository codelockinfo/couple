<div class="Main-Image-with-texts" id="{{ section.id }}">
  <div class="main-position-section">
    <div class="flex-overlay-section {% if section.settings.option-select == '1' %}Flex-direction-change{% endif %}">
      <div class="selctcombo">
        {% if section.settings.image != blank %}
          <div class="image-section-over width-over-combo">
            <img src="{{ section.settings.image | img_url: 'master' }}">
          </div>
        {% endif %}
      </div>

      <div class="text-over-section width-over-combo1">
        <div class="over-text">
          {% for block in section.blocks %}
            <div class="masterdiv">
              <div class="imagesdiv">
                <img src="{{ block.settings.imagesmain | img_url: 'master'  }}">
              </div>
              <div class="headingdiv">
                <h2 class="heading">{{ block.settings.heading }}</h2>
                <p class="text">{{ block.settings.text }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image With Text Select",
  "settings": [
    {
      "id" : "image",
      "type" : "image_picker",
      "label" : "Image"
    },

    {
    "type": "select",
    "id": "option-select",
    "default": "2",
    "options": [
     {
        "value": "1",
        "label": "Right"
     },
     {
        "value": "2",
        "label": "Left"
      }
    ],
    "label": "Image Position"
  }
  ],
  "blocks": [
  {
    "type": "block",
    "name": "text block",
    "settings": [
      {
      "id" : "imagesmain",
      "type" : "image_picker",
      "label" : "Image"
    },
    {
      "id" : "heading",
      "type" : "text",
      "label" : "Heading"
    },
    {
      "id" : "text",
      "type" : "textarea",
      "label" : "Text"
    }
    ]
  }
],
  "presets" : [
    {
      "name" : "Image With Text Select "
    }
  ]
}
{% endschema %}

<style>
