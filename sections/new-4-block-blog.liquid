<div class="Containers block4">
  <div class="maindivv">
    {% for block in section.blocks %}
      <div class="block-1">
        <div
          class="image-box "
          style=" background-image: linear-gradient(to bottom,transparent 0%,transparent 3vw,{{block.settings.colors1}} 0vw,{{block.settings.colors1}} 100%);"
        >
          <div class="blockimg">
            <img src="{{ block.settings.imageurl |img_url: '800x'}}">
          </div>
        </div>
        <h5>{{ block.settings.subheading }}</h5>

        <h4>{{ block.settings.heading }}</h4>
        <p>{{ block.settings.content1 }}</p>
        <a class="book-concierge with-link-primary" href="#">
          <div class="background-container">
            <div class="image-container image-ready"></div>
          </div>
          <a class="link-primary animate-out" href="{{ block.settings.url-link }}">{{ block.settings['url-text'] }}</a>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "new blog 4",
  "settings": [],
    "blocks": [
  {
    "type": "collection",
    "name": "Collection",
    "settings": [
       {
    "type": "image_picker",
    "id": "imageurl",
    "label": "Image",
    "info": "1200 x 1200px .png recommended"
  },
       {
                  "type": "color",
                  "id": "colors1",
                  "label": "Active Dot Color"
                },
    {
    "type": "text",
    "id": "subheading",
    "label": "Sub-heading",
    "default": "Sub-heading"
  },
    {
    "type": "text",
    "id": "heading",
    "label": "heading",
    "default": "heading"
  },
    {
    "type": "richtext",
    "id": "content1",
    "label": "Text",
    "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
  },
    {
    "type": "url",
    "id": "url-link",
    "label": "Link URL"
  },
    {
    "type": "text",
    "id": "url-text",
    "label": "Link text"
  }

    ]
  }
],


  "presets": [
  {
   "name": "new blog 4"
  }
]
}
{% endschema %}

{% stylesheet %}
    .image-box .blockimg img {

      min-height: 160px;
  }
      .maindivv{
            display: flex;
        justify-content: space-around;

      }
    .maindivv {
        width: 100%;
    }
       .block4 .block-1 {
          width: 23%;
      }
      .Containers{
        max-width:1250px;
            margin: auto;
      }

      .block-1 h5{
          color: #ef525b;
          font-size: 12px;
          line-height: 24px;
          text-transform: uppercase;
          font-family: Brown;
             margin: 24px 0 15px;
          letter-spacing: .12em;
      }

      element.style {
      }
      .block-1 h4 {
          font-family: Feijoa-Medium,Georgia,Times New Roman,Times,serif;
          font-weight: 400;
          line-height: 1.3;
          color: #122947;
          margin: 0 0 24px;
          font-size: 25px;
      }
       .block-1 p {
             font-weight: bold;
          line-height: 1.75;
          color: #122947cc;
          font-size: 17px;
      }
        a.link-primary.animate-out {
          position: relative;
          text-transform: uppercase;
          font-weight: 700;
          font-size: 12px;
          border-bottom: 2px solid rgba(18,41,71,.12);
