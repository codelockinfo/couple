<div class="">
  <div class="maindivv">
    {% for block in section.blocks %}
      <div class="step-1">
        <div
          class="image-box "
          style=" background-image: linear-gradient(to bottom,transparent 0%,transparent 6vw,{{block.settings.colors1}} 0vw,{{block.settings.colors1}} 100%);"
        >
          <div>
            <img src="{{ block.settings.imageurl |img_url: '800x'}}">
          </div>
        </div>
        <h5>{{ block.settings.subheading }}</h5>

        <h4>{{ block.settings.heading }}</h4>
        <p>{{ block.settings.content1 }}</p>
        <a class="book-concierge with-link-primary" href="#">
          <div class="background-container">
            <div class="image-container image-ready"></div>
          </div>
          <a class="link-primary animate-out" href="{{ block.settings.url-link }}">{{ block.settings['url-text'] }}</a>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "blog full",
  "settings": [],
    "blocks": [
  {
    "type": "blog",
    "name": "blog",
    "settings": [
       {
    "type": "image_picker",
    "id": "imageurl",
    "label": "Image",
    "info": "1200 x 1200px .png recommended"
  },
       {
                  "type": "color",
                  "id": "colors1",
                  "label": "Active Dot Color"
                },
    {
    "type": "text",
    "id": "subheading",
    "label": "Sub-heading",
    "default": "Sub-heading"
  },
    {
    "type": "text",
    "id": "heading",
    "label": "heading",
    "default": "heading"
  },
    {
    "type": "richtext",
    "id": "content1",
    "label": "Text",
    "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
  },
    {
    "type": "url",
    "id": "url-link",
    "label": "Link URL"
  },
    {
    "type": "text",
    "id": "url-text",
    "label": "Link text"
  }

    ]
  }
],


  "presets": [
  {
   "name": "blog full"
  }
]
}
{% endschema %}

