<div class="brand-logo">
  <h2>{{ section.settings.heading }}</h2>
  {% for block in section.blocks %}
    <div class="logoimg">
      <img src="{{ block.settings.image| img_url: 'master' }}">
    </div>
  {% endfor %}
</div>
{% schema %}
  {
  "name": "brand logo",
  "settings": [
{
      "id" : "heading",
      "type" : "text",
      "label" : "Heading"
    }
  ],
  "blocks": [
  {
    "type": "block",
    "name": "text block",
    "settings": [
      {
      "id" : "image",
      "type" : "image_picker",
      "label" : "Image"
    }
    ]
  }
],
  "presets" : [
    {
      "name" : "brand logo"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .brand-logo h2 {
    
    width: 100%;
    text-align: center;
        color: #ef525b;
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
    font-family: Brown;
    margin: 0 0 24px;
    letter-spacing: .12em;
}
  .brand-logo {
    display: flex;
    justify-content: space-around;
        flex-wrap: wrap;
}
  .brand-logo .logoimg {
    width: 20%;
    
}
 .brand-logo {
    width: 100%;
    padding: 4% 0;
}
    @media(max-width:1049px){
      .brand-logo .logoimg {
    width: 33%;
}       
    }
     @media(max-width:540px){
      .brand-logo .logoimg {
  width: 50%;     
}      
    }
  @media(max-width:380px){
      .brand-logo .logoimg {
  width: 100%;     
}
    }
{% endstylesheet %}

