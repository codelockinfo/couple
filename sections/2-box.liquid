<div class="mainbox">
{% for block in section.blocks %}
  <div class="guide">
    <div class="2blockimg" style="background-image: linear-gradient(to bottom,transparent 0%,transparent 10%,{{ block.settings.bgcolor }} 10%,{{ block.settings.bgcolor }} 100%);">
      <img src="{{ block.settings.mainimges| img_url: 'master' }}">
    </div>
    <div class="abstract-container">
        <h5>{{ block.settings.Service }}</h5>
        <h3>{{ block.settings.Guide }}</h3>
        <p>{{ block.settings.ptext }}</p>

        <a class="button read-more" href="{{ block.settings.our }}">{{ block.settings.Seeour }}</a>
   </div>
  </div>
{% endfor %}
</div>


{% stylesheet %}
  .mainbox {
    display: flex;
    flex-wrap: wrap;
    max-width: 1400px;
    margin: auto;
    justify-content: space-around;
}
.guide {
    width: 48%;
    text-align: center;
}
.abstract-container {
    padding: 32px 24px 48px;
    text-align: center;
}
  .abstract-container h5 {
    color: #ef525b;
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
    font-family: Brown;
    margin: 0 0 24px;
    letter-spacing: .12em;
}
  .abstract-container h3{
    font-family: Feijoa-Medium,Georgia,Times New Roman,Times,serif;
    font-weight: 400;
    line-height: 1.3;
    color: #122947;
    margin: 0 0 24px;
    font-size: 34px;
  }
  .abstract-container p{
    line-height: 1.75;
    color: #122947cc;
    font-size: 19px;
}
.2blockimg img {
    height: 600px;
}
    @media(max-width:768px){
      .mainbox {
    display: block;
}
      .guide {
    margin: auto;
    width: 95%;
}
    }
    @media(max-width:440px){
      .abstract-container h3{
        font-size: 21px;
      }
      .abstract-container p {
    font-size: 16px;
}
    }




  
{% endstylesheet %}


