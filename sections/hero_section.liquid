{% stylesheet %}
.hero1 {
    padding: 0 24px;
    position: relative;
    height: 100vh;
    min-height: 716px;
}
.grid {
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    margin-left: -24px;
    margin-right: -24px;
    padding-right: 24px;
}
.hero .grid {
    position: relative;
    z-index: 2;
    height: 100%;
}
.module-plp .hero .grid, .module-plp .hero .design {
    height: 50%;
}
.hero .grid .left-column {
    position: relative;
    margin-bottom: 0;
    padding: 120px 0;
    align-self: center;
}
  .hero .grid .right-column {
    position: relative;
    margin-bottom: 0;
}
  .grid>* {
    flex: 1 1 0%;
    box-sizing: border-box;
    margin-left: 24px;
    margin-bottom: 24px;
}
 h5.fade {
    color: #ef525b;
    font-size: 12px;
    line-height: 24px;
    text-transform: uppercase;
    font-family: Brown;
    margin: 0 0 24px;
    letter-spacing: .12em;
}
  h2.fade {
    font-family: Feijoa-Medium,Georgia,Times New Roman,Times,serif;
    font-weight: 400;
    line-height: 1.3;
    color: #122947;
    margin: 0 0 24px;
}
  p.body-large.fade {
    font-size: 16px;
    line-height: 1.75;
    color: #122947cc;
    opacity: 1;
}
  .button-hero {
    position: relative;
    background-color: transparent;
    border: none;
    transform: none;
    background-color: #fff;
    border-radius: 2px;
    box-shadow: 0 2px 4px #00000014;
    color: #122947;
}
  .button {
    display: inline-block;
    height: 56px;
    min-width: 160px;
    border: 1px solid rgba(18,41,71,.12);
    border-radius: 2px;
    font-size: 12px;
    font-weight: 700;
    line-height: 14px;
    text-align: center;
    padding: 0 24px;
    color: #122947;
    line-height: 54px;
    text-transform: uppercase;
    letter-spacing: .12em;
    white-space: nowrap;
    transition: background-color .2s Cubic-bezier(1,0,.43,1),color .2s Cubic-bezier(1,0,.43,1),transform .2s Cubic-bezier(.3,0,.3,1);
}
  
{% endstylesheet %}

